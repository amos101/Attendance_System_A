<% provide(:title, "Top") %>
<div class="center jumbotron">
  <h1>勤怠システム</h1>
  <% if logged_in? %>
    <%= link_to "ログアウト", logout_path, method: :delete, class: "btn btn-lg btn-primary" %>
  <% else %> 
    <%= link_to "log in", login_path, class: "btn btn-lg btn-primary" %>
    <p> アカウント作成は<%= link_to "こちら", signup_path %>から</p>
  <% end %>  
</div>